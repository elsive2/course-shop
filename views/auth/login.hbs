<div class="auth">
	<div class="row">
		<div id="login" class="col s6 offset-s3">
			<h1>Signing in</h1>

			{{#if error}}
			<p class="alert alert-danger">{{error}}</p>
			{{/if}}

			{{#if success}}
			<p class="alert alert-success">{{success}}</p>
			{{/if}}

			<form action="/auth/login" method="POST" novalidate>
				<div class="input-field">
					<input name="email" id="email" type="text" class="validate" value="{{email}}" required>
					<label for="email">email</label>
					<span class="helper-text" data-error="Enter the email"></span>
				</div>

				<div class="input-field">
					<input name="password" id="password" type="password" class="validate" required>
					<label for="password">password</label>
					<span class="helper-text" data-error="Enter the password"></span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}">

				<p><a href="/auth/reset">Forgot you password?</a></p>
				<p><a href="/auth/register">Not registered yet? Do it</a></p>

				<button class="btn btn-primary" type="submit">Sign in</button>
			</form>
		</div>
	</div>
</div>