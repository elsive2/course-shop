<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Login</a></li>
				<li class="tab col s6"><a class="active" href="#register">Register</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">
			<h1>Signing in</h1>

			<form action="/auth/login" method="POST">
				<div class="input-field">
					<input name="email" id="email" type="text" class="validate" required>
					<label for="email">email</label>
					<span class="helper-text" data-error="Enter the email"></span>
				</div>

				<div class="input-field">
					<input name="password" id="password" type="password" class="validate" required>
					<label for="password">password</label>
					<span class="helper-text" data-error="Enter the password"></span>
				</div>

				<button class="btn btn-primary" type="submit">Sign in</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3">
			<h1>Register</h1>

			<form action="/auth/register" method="POST">
				<div class="input-field">
					<input name="email" id="remail" type="text" class="validate" required>
					<label for="remail">email</label>
					<span class="helper-text" data-error="Enter the email"></span>
				</div>

				<div class="input-field">
					<input name="password" id="rpassword" type="password" class="validate" required>
					<label for="rpassword">password</label>
					<span class="helper-text" data-error="Enter the password"></span>
				</div>

				<div class="input-field">
					<input name="password_confirmation" id="confirmation" type="password" class="validate" required>
					<label for="confirmation">repeate your password</label>
					<span class="helper-text" data-error="Enter the password again"></span>
				</div>

				<div class="input-field">
					<input name="name" id="name" type="text" class="validate" required>
					<label for="name">name</label>
					<span class="helper-text" data-error="Enter the name"></span>
				</div>

				<button class="btn btn-primary" type="submit">Register</button>
			</form>
		</div>
	</div>
</div>