<div class="auth">
	<div class="row">
		<div class="col s6 offset-s3" id="register">
			<h1>Register</h1>

			{{#if error }}
			<p class="alert alert-danger">{{ error }}</p>
			{{/if}}

			<form action="/auth/register" method="POST">
				<div class="input-field">
					<input name="email" id="email" type="text" class="validate" value="{{data.email}}" required>
					<label for="email">email</label>
					<span class="helper-text" data-error="Enter the email"></span>
				</div>

				<div class="input-field">
					<input name="name" id="name" type="text" class="validate" value="{{data.name}}" required>
					<label for="name">name</label>
					<span class="helper-text" data-error="Enter the name"></span>
				</div>

				<div class="input-field">
					<input name="password" id="password" type="password" class="validate" value="{{data.password}}"
						required>
					<label for="password">password</label>
					<span class="helper-text" data-error="Enter the password"></span>
				</div>

				<div class="input-field">
					<input name="password_confirmation" id="confirmation" type="password" class="validate"
						value="{{data.password_confirmation}}" required>
					<label for="confirmation">repeate your password</label>
					<span class="helper-text" data-error="Enter the password again"></span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}">

				<button class="btn btn-primary" type="submit">Register</button>
			</form>
		</div>
	</div>
</div>