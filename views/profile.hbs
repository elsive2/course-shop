<h1>Profile</h1>

<div class="row">
	<div class="col s6">
		{{#if user.avatarUrl}}
		<img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
		{{else}}
		<img class="avatar"
			src="data:image/jpeg;base64,"
			alt="">
		{{/if}}
	</div>
	<div class="col s6">
		<form action="/profile?_csrf={{csrf}}" method="POST" enctype="multipart/form-data">
			<p>Your email is <strong>{{user.email}}</strong></p>

			<div class="input-field">
				<input name="name" id="name" type="text" class="validate" value="{{user.name}}" required>
				<label for="name">Your name</label>
				<span class="helper-text" data-error="Enter the name"></span>
			</div>

			<div class="file-field input-field">
				<div class="btn">
					<span>Avatar</span>
					<input type="file" name="avatar">
				</div>
				<div class="file-path-wrapper">
					<input class="file-path validate" type="text" placeholder="Upload your avatar">
				</div>
			</div>

			<input type="submit" class="btn">Change</input>
		</form>
	</div>
</div>